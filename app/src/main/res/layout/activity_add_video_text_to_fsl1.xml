<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white_color">

    <!-- Title -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Video Tutorials"
        android:textColor="@color/grey_color"
        android:fontFamily="@font/semibold"
        android:textSize="16sp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

    <!-- Centered Layout -->

    <LinearLayout
        android:id="@+id/centered_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/category_radius"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Category: "
                android:textColor="@color/black_color"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/video_category_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="15sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/video_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:hint="Enter video title"
            android:padding="16dp"
            android:textSize="15sp" />




        <TextView
            android:id="@+id/selected_file_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#F0F0F0"
            android:fontFamily="@font/regular"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="#FF000000" />

        <Button
            android:id="@+id/add_video_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/with_border1_white_radius10"
            android:backgroundTint="@color/black_color"
            android:fontFamily="@font/extrabold"
            android:text="Add Video"
            android:layout_marginTop="10dp"
            android:textColor="@color/white_color"
            android:textSize="15sp" />

    </LinearLayout>

<!--    for uploaded mp4-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/search_video_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centered_layout" />



    <Button
        android:id="@+id/search_video_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/with_border1_white_radius10"
        android:backgroundTint="@color/black_color"
        android:fontFamily="@font/extrabold"
        android:text="Search video tutorial"
        android:textColor="@color/white_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
 />

</androidx.constraintlayout.widget.ConstraintLayout>
