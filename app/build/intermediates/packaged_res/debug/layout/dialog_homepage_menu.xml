<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/dialog_menu">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/with_border1_white_radius25"
        android:backgroundTint="@color/white_color"
        android:orientation="vertical"
        android:padding="5dp">

        <!-- Developer Info Section -->
        <LinearLayout
            android:id="@+id/about_us"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:background="@drawable/with_border1_white_radius10_grey"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/no_border_white_bg_10radius"
                android:src="@drawable/about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/semibold"
                android:text="About Us"
                android:textColor="@color/black_color"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dev_info"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:background="@drawable/with_border1_white_radius10_grey"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/no_border_white_bg_10radius"
                android:src="@drawable/dev_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/semibold"
                android:text="Developers Info"
                android:textColor="@color/black_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maintenance"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:background="@drawable/with_border1_white_radius10_grey"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:background="@drawable/no_border_white_bg_10radius"
                android:src="@drawable/maintenance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/semibold"
                android:text="Maintenance"
                android:textColor="@color/black_color"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
