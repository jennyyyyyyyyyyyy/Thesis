<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white_color">

    <!-- Title -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Video Tutorials"
        android:textColor="@color/grey_color"
        android:fontFamily="@font/semibold"
        android:textSize="16sp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

    <!-- Category Section -->
    <LinearLayout
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/category_radius"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/center"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        tools:layout_editor_absoluteX="57dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/category" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Category: "
            android:textColor="@color/black_color"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/video_category_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

    </LinearLayout>

    <!-- Video Title Input & Add Button -->
    <LinearLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/selected_file_path"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <EditText
            android:id="@+id/video_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/regular"
            android:hint="Enter video title"
            android:padding="16dp"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="16dp" />

        <LinearLayout
            android:id="@+id/add_video_button"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/black_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@drawable/add_plus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/extrabold"
                android:text="Add"
                android:textColor="@color/white_color"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/selected_file_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0"
        android:fontFamily="@font/regular"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Upload"
        android:background="@drawable/border"
        android:textColor="@color/white_color"
        android:fontFamily="@font/bold"
        android:textSize="15sp"
        android:backgroundTint="@color/black_color"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/selected_file_path"

        />


