<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white_color"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="menu"
        android:background="@color/white_color"
        android:src="@drawable/menu" />
    <include
        android:id="@+id/modal_top_left"
        layout="@layout/dialog_homepage_menu"
        android:visibility="gone" />
    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Filipino Sign Language Translator"
        android:textAlignment="center"
        android:fontFamily="@font/extrabold"
        android:textColor="@color/black_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whether for personal or educational use, FILConnectEd makes conversations more inclusive and meaningful. Experience foster understandingâ€”anytime, anywhere."
        android:textAlignment="center"
        android:fontFamily="@font/regular"
        android:textSize="14sp"
        android:textColor="@color/black_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleText"
        android:layout_marginBottom="24dp" />

    <!-- Image -->
    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/descriptionText"
        android:src="@drawable/homepage_icon" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp">

        <!-- Button 1 -->
        <Button
            android:id="@+id/btn_fsl_to_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FSL to Text &amp; Audio"
            android:fontFamily="@font/extrabold"
            android:textSize="14sp"
            android:backgroundTint="@color/black_color"
            android:textColor="@color/white_color"
            android:background="@drawable/border"
            android:layout_marginBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Button 2 -->
        <Button
            android:id="@+id/text_to_fsl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text to FSL"
            android:backgroundTint="@color/black_color"
            android:fontFamily="@font/extrabold"
            android:textSize="14sp"
            android:textColor="@color/white_color"
            android:background="@drawable/border"
            android:layout_marginBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Button 3 -->
        <Button
            android:id="@+id/app_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Tutorial"
            android:backgroundTint="@color/black_color"
            android:fontFamily="@font/extrabold"
            android:textSize="14sp"
            android:textColor="@color/white_color"
            android:background="@drawable/border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

</RelativeLayout>
