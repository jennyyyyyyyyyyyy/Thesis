<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="end"
        android:background="@drawable/collect_data_dialog_radius"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/collect_data_dialog_radius_top"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gesture name"
                android:textColor="@color/black_color"
                android:fontFamily="@font/semibold"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/inputLabel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Dynamic gesture name"
                android:textSize="12sp"
                android:fontFamily="@font/regular"
                android:textColor="@color/black_color"
                android:background="@drawable/model_update_border"
                android:padding="12dp"/>


        </LinearLayout>


        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Next"
            android:background="@drawable/collect_data_dialog_nextbtn"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bold"
            android:layout_marginEnd="20dp"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>