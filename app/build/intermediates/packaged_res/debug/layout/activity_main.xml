<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <EditText
        android:id="@+id/etCustomFilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter filename" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Video" />

    <Button
        android:id="@+id/btnListVideos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Videos" />

    <EditText
        android:id="@+id/etOldName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Old Filename" />

    <EditText
        android:id="@+id/etNewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Filename" />

    <Button
        android:id="@+id/btnRename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rename Video" />

    <EditText
        android:id="@+id/etDeleteFilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Filename to Delete" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Video" />

    <EditText
        android:id="@+id/etShowFilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Video Filename" />

    <Button
        android:id="@+id/btnShowVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Video" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result will appear here" />
    </ScrollView>
</LinearLayout>